{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["ES6", "dom"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "dev",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "dev/@types"
    ],                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {} 
  },
  "include": [
    "dev/**/*"
  ]
}
